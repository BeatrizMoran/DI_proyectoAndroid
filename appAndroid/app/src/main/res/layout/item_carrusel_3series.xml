<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="3">

    <!-- Serie 1 -->
    <LinearLayout
        android:id="@+id/containerSerie1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="top|center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imgSerie1"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/serie_default_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTituloSerie1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título muy largo que ocupa dos líneas"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Serie 2 -->
    <LinearLayout
        android:id="@+id/containerSerie2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="top|center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imgSerie2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/serie_default_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTituloSerie2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Serie 3 -->
    <LinearLayout
        android:id="@+id/containerSerie3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="top|center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imgSerie3"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/serie_default_image" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvTituloSerie3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
